                </div>
            </div>
        </div>
        <div class="clearfix"></div>
    </div>
    <div class="col-lg-9 col-md-9">
        <div class="row">
            <div class="col-md-12 room-main-content nopadding-xs">
                <div class="menu-tab">
                    <div class="menu-tab-title"><a href=""><span>Tin</span> Mới nhất <i class="fa fa-angle-right"></i></a></div>
                    <div class="menu-tab-title-right">
                        <div class="view-mode">
                            <a href="javascript:;" class="active">
                                <i class="fa fa-th"></i>
                            </a>
                            <a href="javascript:;" class="switch-view" data-view="list">
                                <i class="fa fa-bars"></i>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="clearfix"></div>
                <div class="tab-content">
                    <div class="tab-pane active" id="tab_type_1">
                        <div class="room-info-list" block-ui="LstRoomBlockUI">
                            <div class="col-sm-6 col-md-4 room-info-item" ng-repeat="item in data.lstRoom">
                                <div class="room-info">
                                    <a href="#" title="CHO THUÊ NHÀ TRỌ QUẬN 4 GIÁ 3.2 TRIỆU THÁNG">
                                        <img class="cover img-reponsive" src="http://localhost:6568/Content/images/{{item.Image}}">
                                    </a>
                                    <div class="room-item-vip">
                                        <a href="">Vip</a>
                                    </div>
                                    <div class="room-item-price">
                                        <a href="">{{item.Price|number}} Đ/tháng</a>
                                    </div>
                                    <div class="caption">
                                        <div class="title">
                                            <h2><a href="">{{item.RoomName}}</a></h2>
                                        </div>
                                        <div class="extra">
                                            <div class="pull-left">
                                                <a href="#"><span class="fa fa-map-marker"></span>{{item.ProvinceName}}</a>
                                            </div>
                                            <div class="pull-right">
                                                <a href=""><span class="fa fa-info"></span>{{item.Acreage|number}} m<sup>2</sup></a>
                                            </div>
                                            <div class="type">
                                                <a href=""><span class="fa fa-home"></span>{{item.RoomTypeName}}</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <pager-directive page="{{page}}" custom-path="{{customPath}}" pages-count="{{pagesCount}}" total-count="{{totalCount}}" search-func="GetAllRoom(page)"></pager-directive>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


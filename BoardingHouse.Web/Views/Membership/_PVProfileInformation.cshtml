<section class="panel" ng-controller="PVProfileInformationController">
    <div class="example-box-wrapper">
        <ul class="list-group row list-group-icons">
            <li class="col-md-3 active">
                <a href="#tab-example-1" data-toggle="tab" class="list-group-item">
                    <i class="font-red fa fa-bullhorn"></i>
                    Thông Tin cá nhân
                </a>
            </li>
            <li class="col-md-3">
                <a href="#tab-example-2" data-toggle="tab" class="list-group-item">
                    <i class="fa fa-tachometer"></i>
                    Cài đặt tài khoản
                </a>
            </li>
            <li class="col-md-3">
                <a href="#tab-example-3" data-toggle="tab" class="list-group-item">
                    <i class="fa fa-camera font-primary"></i>
                    Lịch sử giao dịch
                </a>
            </li>
            <li class="col-md-3">
                <a href="#tab-example-4" data-toggle="tab" class="list-group-item">
                    <i class="fa fa-camera font-blue-alt"></i>
                    Đổi Point thành xu
                </a>
            </li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane pad0A active" id="tab-example-1">
                <div class="content-box">
                    <div class="form-horizontal pad15L pad15R bordered-row" id="UpdateUser">
                        <div class="form-group remove-border">
                            <label class="col-sm-3 control-label">Email:</label>
                            <div class="col-sm-6">
                                <input type="email"
                                       ng-model="UserInfomation.Email"
                                       class="form-control"
                                       name="Email"
                                       disabled="disabled"
                                       data-fv-emailaddress="true"
                                       data-fv-emailaddress-message="Phải đúng là Email của bạn"
                                       data-fv-stringlength="true"
                                       data-fv-stringlength-max="250"
                                       data-fv-stringlength-message="Tiêu đề chỉ được 250 ký tự"
                                       data-fv-notempty="true"
                                       data-fv-notempty-message="Vui lòng nhập Email của bạn"
                                       placeholder="Email...">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Tên tài khoản:</label>
                            <div class="col-sm-6">
                                <input type="text"
                                       ng-model="UserInfomation.UserName"
                                       data-fv-notempty="true"
                                       disabled="disabled"
                                       data-fv-notempty-message="Vui lòng nhập tên tài khoản của bạn"
                                       class="form-control"
                                       name="UserName"
                                       placeholder="Tên tài khoản của bạn là:...">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Họ và tên :</label>
                            <div class="col-sm-6">
                                <input type="text"
                                       ng-model="UserInfomation.FullName"
                                       class="form-control"
                                       data-fv-notempty="true"
                                       data-fv-notempty-message="Vui lòng nhập tên bạn muốn hiển thị của bạn"
                                       name="FullName"
                                       placeholder="tên hiển thị của bạn:...">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Số điện thoại:</label>
                            <div class="col-sm-6">
                                <input type="text"
                                       ng-model="UserInfomation.PhoneNumber"
                                       class="form-control"
                                       placeholder="Số điện thoại:...">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Địa chỉ:</label>
                            <div class="col-sm-6">
                                <input type="text"
                                       ng-model="UserInfomation.Address"
                                       class="form-control"
                                       placeholder="Địa chỉ:...">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Ngày sinh:</label>
                            <div class="col-sm-6">
                                <input type="date"
                                       ng-model="UserInfomation.BirthDay"
                                       class="form-control"
                                       placeholder="Ngày sinh:...">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-3 control-label " for="userName">Ảnh đại diện:</label>
                            <div class="col-lg-3">
                                <div class="fileinput fileinput-new" data-provides="fileinput">
                                    <div class="fileinput-new thumbnail" style="width: 100%; height: 115px;">
                                        <img ng-src="http://localhost:6568/Content/images/{{UserInfomation.Avatar}}" />
                                    </div>
                                    <div class="fileinput-preview fileinput-exists thumbnail" data-trigger="fileinput" style="width: 100%; height: 115px;"></div>
                                    <div>
                                        <span class="btn btn-success btn-xs btn-file">
                                            <span class="fileinput-new"><i class="fa fa-cloud-upload" style="margin-right:5px;" aria-hidden="true"></i>Chọn ảnh</span>
                                            <span class="fileinput-exists"><i class="fa fa-wrench" style="margin-right:5px;" aria-hidden="true"></i>Thay đổi</span>
                                            <input type="file" name="Image" ng-file-select="prepareFiles($files)">
                                        </span>
                                        <a href="#" class="btn btn-danger btn-xs fileinput-exists" data-dismiss="fileinput"><i class="fa fa-trash-o" aria-hidden="true" style="margin-right:5px;"></i>Xóa</a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-5  no-padding">
                                <div class="quick-fill">
                                    <div class="title-input"><i class="fa fa-info-circle" aria-hidden="true"></i><span>Ảnh đẹp sẽ giúp tăng truy cập vào bài đăng của bạn</span></div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label"></label>
                            <div class="col-sm-6">
                                <button class="btn btn-info" ng-click="SaveUpdateUser();"><i style="margin-right:10px;" class="fa fa-user" aria-hidden="true"></i>Cập nhập</button>
                                <button class="btn btn-danger">Hủy</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="tab-pane pad0A fade" id="tab-example-2">
                <div class="content-box">
                    <div class="form-horizontal pad15L pad15R clearfix bordered-row" id="ChangePassword">
                        <h3 class="content-box-header clearfix">
                            Thay đổi mật khẩu
                            <div class="font-size-11 float-right">
                                <a href="#" title="">
                                    <i class="glyph-icon mrg5R opacity-hover icon-plus"></i>
                                </a>
                                <a href="#" title="">
                                    <i class="glyph-icon opacity-hover icon-cog"></i>
                                </a>
                            </div>
                        </h3>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Mật khẩu cũ:</label>
                            <div class="col-sm-6">
                                <input type="password"
                                       class="form-control"
                                       data-fv-notempty="true"
                                       name="OldPassword"
                                       ng-model="changePassword.OldPassword"
                                       data-fv-notempty-message="Vui lòng nhập mật khẩu cũ của bạn"
                                       placeholder="Mật khẩu cũ">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Mật khẩu mới *:</label>
                            <div class="col-sm-6">
                                <input type="password"
                                       class="form-control"
                                       name="NewPassword"
                                       placeholder="Mật khẩu mới"
                                       ng-model="changePassword.NewPassword"
                                       data-fv-notempty="true"
                                       data-fv-notempty-message="Vui lòng nhập mật khẩu mới của bạn">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Nhập lại mật khẩu :</label>
                            <div class="col-sm-6">
                                <input type="password" class="form-control"
                                       data-fv-notempty="true"
                                       name="ConfirmPassword"
                                       placeholder="Nhập lại mật khẩu mới"
                                       ng-model="changePassword.ConfirmPassword"
                                       data-fv-notempty-message="Vui lòng nhập lại mật khẩu">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label"></label>
                            <div class="col-sm-6">
                                <button class="btn btn-info" ng-click="ChangePassword();"><i style="margin-right:10px;" class="fa fa-user" aria-hidden="true"></i>Thay đổi</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="tab-pane pad0A fade" id="tab-example-3">
                <div class="content-box">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Row 1</th>
                                <th>Row 2</th>
                                <th>Row 3</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>#</td>
                                <td>Row 1</td>
                                <td>Row 2</td>
                                <td>Row 3</td>
                            </tr>
                            <tr>
                                <td>#</td>
                                <td>Row 1</td>
                                <td>Row 2</td>
                                <td>Row 3</td>
                            </tr>
                            <tr>
                                <td>#</td>
                                <td>Row 1</td>
                                <td>Row 2</td>
                                <td>Row 3</td>
                            </tr>
                            <tr>
                                <td>#</td>
                                <td>Row 1</td>
                                <td>Row 2</td>
                                <td>Row 3</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="tab-pane pad0A fade" id="tab-example-4">
                <div class="content-box">
                    <form class="form-horizontal pad15L pad15R clearfix bordered-row">
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Điểm thưởng:</label>
                            <div class="col-sm-6">
                                <input type="text" class="form-control" id="" placeholder="Điểm thưởng...">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Điểm cần đổi *:</label>
                            <div class="col-sm-6">
                                <input type="text" class="form-control" id="" placeholder="Điểm bạn cần đổi:...">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Xu nhận được :</label>
                            <div class="col-sm-6">
                                <input type="text" class="form-control" id="" placeholder="Xu nhận được:...">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label"></label>
                            <div class="col-sm-6">
                                <button class="btn btn-info"><i style="margin-right:10px;" class="fa fa-user" aria-hidden="true"></i>Đổi xu</button>
                                <button class="btn btn-danger">Hủy</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

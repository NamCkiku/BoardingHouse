
@{
    ViewBag.Title = "Membership";
    Layout = "~/Views/Shared/_LayoutDetail.cshtml";
}
<div class="row" style="margin-top:30px" ng-controller="ProfileController">
    <div class="col-lg-3">
        <aside class="profile-nav profile">
            <section class="panel">
                <div class="user-heading round">
                    <a href="#">
                        <img ng-src="http://localhost:6568/Content/images/{{userInfo.Avatar}}" alt="">
                    </a>
                    <div class="profile-info">
                        <h4 class="profile-name mb5" id="lblGuestFullName">{{userInfo.UserName}}</h4>
                    </div>
                    <div class="profile-userbuttons">
                        <button type="button" class="btn btn-sm"><i class="fa fa-upload" style="margin-right:10px" aria-hidden="true"></i>Đăng Tin</button>
                        <button type="button" class="btn btn-sm"><i class="fa fa-money" style="margin-right:10px" aria-hidden="true"></i>Nạp Thẻ</button>
                    </div>
                </div>
                <section class="box-typical">
                    <div class="box-typical-inner">
                        <p class="line-with-icon">
                            <i class="fa fa-map-marker" style="margin-right:10px;" aria-hidden="true"></i>
                            Địa chỉ:{{userInfo.Address}}
                        </p>
                        <p class="line-with-icon">
                            <i class="fa fa-phone" style="margin-right:10px;" aria-hidden="true"></i>
                            Sđt:{{userInfo.PhoneNumber}}
                        </p>
                        <p class="line-with-icon">
                            <i class="fa fa-money" style="margin-right:10px;" aria-hidden="true"></i>
                            Xu:<span class="label label-pill label-success">{{userInfo.Coin}}</span>
                        </p>
                        <p class="line-with-icon">
                            <i class="fa fa-gift" style="margin-right:10px;" aria-hidden="true"></i>
                            Điểm thưởng:<span class="label label-pill label-success">{{userInfo.Point}}</span>
                        </p>
                    </div>
                </section>
                <ul class="nav nav-pills nav-stacked">
                    <li ng-class="{'active' : data.MainTab==1}"><a href="#user-tap-1" ng-click="fireLoadProfileInformationEvent();" data-toggle="tab"> <i class="fa fa-user"></i> Thông Tin</a></li>
                    <li ng-class="{'active' : data.MainTab==2}"><a href="#user-tap-2" ng-click="fireLoadListRoomByUserEvent();" data-toggle="tab"> <i class="fa fa-calendar"></i> Tin đã đăng</a></li>
                    <li><a href="#user-tap-3" data-toggle="tab"> <i class="fa fa-edit"></i> Tin đã lưu</a></li>
                </ul>

            </section>
        </aside>
    </div>
    <div class="col-lg-9">
        <div class="tab-content">
            <div class="tab-pane active" id="user-tap-1">
                @{ Html.RenderAction("_PVProfileInformation", "Membership"); }
            </div>
            <div class="tab-pane fade" id="user-tap-2">
                @{ Html.RenderAction("_PVProfileListRoom", "Membership"); }
            </div>
        </div>
    </div>
</div>